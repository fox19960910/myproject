doctype html
include ../include/mixin
+head('Trang chu',"https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900&display=swap")
body
    //header
    header.header
        .container
            //wrap header
            .header__wrap
                a(href="index.html").logo
                    img(src="../img/logo.png", alt="logo")
                // navigation header
                // navigation user, serch, 
                .nav-action
                    ul.nav-action__list
                        //search
                        li.nav-action__item
                            .search-form
                                input(type="text" placeholder="Tim kiem").search-form__input
                                <i class="fa fa-search search-form__icon" aria-hidden="true"></i>

                        // notify
                        li.nav-action__item
                            .notify
                                <i class="fa fa-bell-o notify__icon" aria-hidden="true"></i>
                                p.notify__num 10
                                .notify__table
                                    
                                    .notify__table-wrap 
                                        ul.notify__list
                                            li.notify__item
                                                +notify('url(../img/user-avt.jpg)', 'foxLearn Thông báo: ','bạn đã đạt 80 điểm trong bài thi trắc nghiệm HTML','5 phút trước')
                                            li.notify__item
                                                +notify('url(../img/user-avt.jpg)', 'foxLearn Thông báo: ','bạn đã đạt 80 điểm trong bài thi trắc nghiệm HTML','5 phút trước')
                                            li.notify__item
                                                +notify('url(../img/user-avt.jpg)', 'foxLearn Thông báo: ','bạn đã đạt 80 điểm trong bài thi trắc nghiệm HTML','5 phút trước')
                                            li.notify__item
                                                +notify('url(../img/user-avt.jpg)', 'foxLearn Thông báo: ','bạn đã đạt 80 điểm trong bài thi trắc nghiệm HTML','5 phút trước')
                                            li.notify__item
                                                +notify('url(../img/user-avt.jpg)', 'foxLearn Thông báo: ','bạn đã đạt 80 điểm trong bài thi trắc nghiệm HTML','5 phút trước')
                                            li.notify__item
                                                +notify('url(../img/user-avt.jpg)', 'foxLearn Thông báo: ','bạn đã đạt 80 điểm trong bài thi trắc nghiệm HTML','5 phút trước')
                                            li.notify__item
                                                +notify('url(../img/user-avt.jpg)', 'foxLearn Thông báo: ','bạn đã đạt 80 điểm trong bài thi trắc nghiệm HTML','5 phút trước')
                                            li.notify__item
                                                +notify('url(../img/user-avt.jpg)', 'foxLearn Thông báo: ','bạn đã đạt 80 điểm trong bài thi trắc nghiệm HTML','5 phút trước')
                                    .fake(style="position:relative")
                                        .notify__close Đóng
                        // user
                        li.nav-action__item
                            .user
                                .user__avt
                                    img(src="../img/user-avt.jpg", alt="")
                                p.user__name Tung Le
                                .user__icon
                                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                                .user__table
                                    .user__table-head
                                        .user__table-avt(style="background-image:url(../img/user-avt.jpg)")
                                        h3.user__table-name Le Xuan Tung 
                                        p.user__table-date Tham gia vào ngày 20/04/2020
                                    .user__table-body
                                        a.user__btn.btn.btn--primary Thông tin
                                        a.user__btn.btn.btn--primary Điểm số
                                        a.user__btn.btn.btn--primary Đăng xuất

    //navigation menu
    .navigation 
        .container
            // navigation on desktop
            +navigation('Trang chủ','Giới thiệu','Luyện tập', 'Tài nguyên', 'Phòng học', 'liên hệ')
            .nav-mobile-wrap
                //logo
                a(href="index.html").logo.logo--second
                    img(src="../img/logo.png", alt="logo")
                // bar button
                .nav-bar
                    span.nav-bar__line
                //navigation responsive
                +navigation1('nav-responsive','Trang chủ','Giới thiệu','Luyện tập', 'Tài nguyên', 'Phòng học', 'liên hệ')

    // banner
    .banner
        .container
            .u-text-center
                h1.heading-head.u-margin-bottom-2 Luyện tập kiến thức miễn phí
                p.paragraph.paragraph--big.u-text-center Cùng luyện tập qua những câu hỏi trắc nghiệm và giao lưu học trực tuyến cùng <span class="primary-color u-text-700"> foxLearn.</span>
                .u-text-center.u-margin-top-4
                    a(href="#").btn.btn--transparent Trắc Nghiệm  
                    a(href="#").btn.btn--transparent Phòng học 
    // about
    section.section-about
        .container
            .u-text-center.u-margin-top-4.u-align-item-center.u-flex.u-justify-content-center 
                h2.heading-section.u-margin-bottom-6 <span style="text-transform:none">foxLearn</span> là gì ?
            .row
                .col-1-of-2
                    h3.heading-primary.u-margin-bottom-2  foxLearn tạo ra giá trị gì?
                    p.paragraph. 
                        Tại foxLearn, chúng tôi cung cấp cho các bạn những bài quiz (trắc nghiệm) về kiến thức Html/css/js và nhiều hơn thế nữa.
                        Đừng bỏ lỡ buổi live-stream giao lưu giải đáp câu hỏi vào mỗi tối thứ 6 và các bài học online trực tuyến tối thứ 2 hàng tuần. 
                        Hãy nhấp chuột vào xem thêm để hiểu rõ về chúng tôi hơn !
                    .u-margin-top-4
                        a(href="#").btn.btn--primary Tìm hiểu thêm
                .col-1-of-2
                    .section-about__img
                        img(src="../img/about-1.jpg", alt="about")
    // practice
    section.section-practice
        .container
            .u-text-center.u-margin-top-4.u-align-item-center.u-flex.u-justify-content-center 
                h2.heading-section.u-margin-bottom-6 Luyện tập ngay cùng <span style="text-transform:none">foxLearn</span>
            .row
                .col-1-of-3 
                    .card
                        .card__head.card__head--1
                            .card__img
                                img(src="../img/html.png", alt="")
                            p.card__title HTML
                        .card__body
                            ul.card__list
                                li.card__item   100+ quiz
                                li.card__item   Cơ bản 
                                li.card__item   Nâng cao
                                li.card__item   Mở rộng
                                .u-text-center.u-margin-top-4
                                    a(href="#").btn.btn--primary Tham gia 
                .col-1-of-3 
                    .card
                        .card__head.card__head--2
                            .card__img
                                img(src="../img/css.png", alt="")
                            p.card__title CSS
                        .card__body
                            ul.card__list
                                li.card__item   1000+ quiz
                                li.card__item   Cơ bản 
                                li.card__item   Nâng cao
                                li.card__item   Boostrap
                                .u-text-center.u-margin-top-4
                                    a(href="#").btn.btn--primary Tham gia 
                .col-1-of-3 
                    .card
                        .card__head.card__head--3
                            .card__img
                                img(src="../img/js.png", alt="")
                            p.card__title JAVASCRIPT
                        .card__body
                            ul.card__list
                                li.card__item   2000+ quiz
                                li.card__item   Cơ bản 
                                li.card__item   Nâng cao
                                li.card__item   Mở rộng
                                .u-text-center.u-margin-top-4
                                    a(href="#").btn.btn--primary Tham gia 
            .u-text-center.u-margin-top-4
                    a(href="#").btn.btn--bg-primary Các môn học khác
    // learning room
    section.section-room
        .container
            .u-text-center.u-margin-top-4.u-align-item-center.u-flex.u-justify-content-center 
                h2.heading-section.u-margin-bottom-6 Tham gia lớp học trực tuyến cùng <span style="text-transform:none">foxLearn</span>
            .video
                .video__img(style="background-image:linear-gradient(to right, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url(../img/video.jpg);")
                .video__overlay
                .video__btn
                    <i class="fa fa-play" aria-hidden="true"></i>
                .video__popup
                    iframe.video__box(src="https://www.youtube.com/embed/tgbNymZ7vqY?autoplay=1")
    
    // contact
    section.section-contact
        .container
            .u-text-center.u-margin-top-4.u-align-item-center.u-flex.u-justify-content-center 
                h2.heading-section.u-margin-bottom-6.u-text-color-light Liên hệ và Đăng ký
            form(action="#")
                .subcrible
                    .subcrible__group.subcrible__group--big
                        input(type="email" placeholder="...Your Email").subcrible__input
                    .subcrible__group
                        button.btn.btn--transparent.btn--sub Nhận thông báo
                        button.btn.btn--transparent.btn--sub Đăng ký tài khoản
    .overlay
    include ../include/footer
    +script("../js/script.js")